    ul  
        float: left;
        width: 100%;
        padding-bottom: 8px;
        margin-bottom: 18px;
    
        li  
            position: relative;
            float: left;
            width: 100%;
            font-size: 15px;
            padding: 12px 0;
            padding-left: 17px; 


        li::before  
            content: '';
            position: absolute;
            left: 0px;
            top: 19px;
            width: 6px;
            height: 6px;
            background: colfirm;
            border-radius: 50%;   
    

    
    ol  
        float: left;
        width: 100%;
        padding-bottom: 8px;
        margin-bottom: 18px;
        counter-reset: li;
        padding: 0;
        list-style: none;
        margin-left: 18px;
    
        li  
            position: relative;
            float: left;
            width: 100%;
            font-size: 15px;
            padding: 12px 0;
    

    
        li::before  
            content: counter(li);
            content: counter(li) '. ';
            counter-increment: li;
            position: absolute;
            top: 10px;
            left: -2em;
            width: 2em;
            padding: 4px 0;
            text-align: center;
            font-size: 15px;
            font-weight 700
   
    
            
