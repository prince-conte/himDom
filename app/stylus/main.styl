  //button-block & button
  
.button-block
    float-w(100%)
    margin-top 40px
    
    .button
        display inline-block
        font-family fontB2
        padding 13px 45px
        background colfirm
        color #fff
        text-transform uppercase
        font-size 14px
        border-radius 45px
        border solid 1px colfirm
        m-speed(0.3s)
        font-weight 700
        
    .button:hover 
        border solid 1px #fff
        background transparent

        
        
        
        
// link-block-phone

.block__phone
    float right
    display inline-block
    
    span
        display inline-block
        font-size 18px
        color #fff
        m-speed(.3s)
        white-space nowrap
        
        .bold 
            font-weight 700
            display inline
            
        
    i
        display inline-block
        width 10px
        height 14px
        bgP(center,center,contain)
        background url(../img/phone.png)
        position relative
        top 2px
        margin-right 12px
        
.block__phone:hover
    span
        color #4aa0e0
        
        
    
    
    
  

