.catalog-line
    float-w(100%)
    background #fff
    border solid 1px #dddddd
    min-height 500px
    
    .catalog-plitka_weight
        text-align left
    
    .torar-sliders_tag
        width 100%
        text-align center
    
    .tech-table__column-one
        width 190px
    
    .tech-table__column-two
        width 160px
    
    .tech-table__column-three
        width 150px
        border-right solid 0px
    
    .tech-table__column-four
        width 115px
        
    .tech-table__column-five
        width 61px
        
    .tech-table__line span
        font-size 12px

    
    &__item
        float-w(100%)
        display block
        padding 0 30px
        position relative
        
        
    &__item-body
        padding 0 20px 20px
        float-w(100%)
        display block
        border-bottom solid 1px #dddddd
        
        
    &__img-block
        float-w(160px)
        padding-top 38px
        min-height 185px
        overflow hidden
    
        
        img
            width 100%
            height auto
            position relative
            margin 0 auto
            display block
            float left
            
    &__firma
        position absolute
        display block
        top 16px
        right 29px
        width 110px
        
        img
            width 100%
            height auto
            
            
    article
        float left
        width 100%
        padding-top 35px
        width 640px
        padding-left 30px
        