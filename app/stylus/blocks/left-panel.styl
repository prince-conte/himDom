.left-panel
    display inline-block
    float-w(290px)
    @media screen and (min-width: 950px) and (max-width: 1249px)
        width 30%
        
    @media screen and (min-width: 300px) and (max-width: 949px)
        width 100%

    
    &__cat-menu
        float-w(100%)
        display block
        position relative
        

        
        .blue
            background #306ebd !important
        
        &_titl
            abs(block,100%, auto,0,0)
            border-top-left-radius 50px
            border-bottom-right-radius 50px
            background colfirm2
            padding 25px
            color #fff
            font-size 23px
            text-align center
            
            
        &__shares-body
            float-w(100%)
            padding 46px 21px 17px 21px
            background #fff
            margin-top 30px
            border solid 1px #dddddd
            border-top solid 0px
            border-top-left-radius 20px
            
            &__item
                float-w(100%)
                min-height 246px
                border-bottom 1px solid #e3e3e3
                padding 23px 10px
                text-align center
                
                &_titl
                    display block
                    float left
                    text-transform uppercase
                    color colfirm
                    text-align center
                    float-w(100%)
                                   
                &_desc
                    display block
                    float left
                    text-transform uppercase
                    color coltxt
                    text-align center
                    float-w(100%)
                    line-height 20px
                    font-size 14px
                    
                img
                    position relative
                    display block
                    margin 0 auto
                    clearfix()
                    width auto
                    height auto
                    padding 17px 0
            &__item
                border solid 0px #fff
                    
                    
                
            
        &__menu-body
            float-w(100%)
            padding 46px 10px 17px 21px
            background #fff
            margin-top 30px
            border solid 1px #dddddd
            border-top solid 0px
            border-top-left-radius 20px
            
            li
                float-w(100%)
                border-bottom solid 1px #f1f2f2
                list-style-type none
                padding-top 5px
            
                
                a
                    display block
                    padding 12px 0 12px 11px
                    font-weight 700
                    color colfirm
                    
                .sub-menu
                    display none
                    float-w(100%)
                    padding 0 30px
                    
                    a
                        display block
                        float-w(100%)
                        
                        span
                            color colfirm
                            font-size 15px
                            border-bottom solid 1px colfirm
                            display inline-block
                            font-weight 400
                        
            .active
                a
                    background colfirm
                    span
                        color #fff
                    
                .sub-menu
                    display block
                    a
                        background #fff
                
                
                        
                
                
                
                span
                    color colfirm3
                    font-size 15px
                    text-transform uppercase
                    border-bottom solid 1px colfirm3
                    padding-bottom 1px
                    line-height 20px
                    m-speed(.2s)
                    font-family fontB
                
            li:hover
                span
                    color colfirm2
                    border-bottom solid 1px colfirm2
                    
.download-b
    position relative
    float left
    width 290px
    border-radius 5px
    background-image: -moz-linear-gradient( 90deg, rgb(17,91,172) 0%, rgb(60,118,196) 100%);
    background-image: -webkit-linear-gradient( 90deg, rgb(17,91,172) 0%, rgb(60,118,196) 100%);
    background-image: -ms-linear-gradient( 90deg, rgb(17,91,172) 0%, rgb(60,118,196) 100%);

    height 54px
    margin-top 14px
        
    &_ico
        abs(block,29px,39px,7px,22px)
        display block
        height 39px
        width 29px
        bgP(center,center,contain)
        background url(IMG_SRC/doc.svg)
        position relative
        
    &_ico::before
        content '';
        abs(block,1px,39px,1px,45px)
        background #0353a4
             
    &_ico::after
        content '';
        abs(block,1px,39px,1px,46px)
        background #4488e0
        
    span
        abs(block,1px,39px,17px,100px)
        color #fff
        font-size 18px
        text-transform uppercase
        m-speed(.2s)
        font-weight 700
        white-space nowrap
        
    
.__shares
    margin-top 46px
        
    
    
        
                
            
        
        