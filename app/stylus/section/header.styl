header
    float-w(100%)
    background colfirm
    display block
    height 153px
    
    .content
        height 100%
        
.logo-block
    float left
    size(290px,153px)
    background #fff
    display table
    border-top-left-radius 50px
    border-bottom-right-radius 50px
    img
        display block
        margin 0 auto
        position relative
        margin-top 10px
        
        
.h
    &__info-block
        float-w(720px)
        height 153px
        padding-left 74px
        padding-right 55px
        padding-top 28px
        
        p
            color #fff
            line-height 25px
            display block
            color #bdd5f6
            
    &_button
        color #bdd5f6
        padding 16px 28px
        border-radius 5px
        border solid 2px #bdd5f6
        display inline-block
        margin-top 19px
        text-transform uppercase
        float left
        m-speed(.2s)
        &:hover 
            background #fff
            color colfirm2
            border solid 2px colfirm2
        
    &__inp-txt
        display inline-block
        width 314px
        border-top solid 1px #bdd5f6
        border-bottom solid 1px #bdd5f6
        margin-top 30px
        position relative
        height 33px
        float left
        margin-left 50px
        
        input
            padding 8px 20px 6px
            abs(block,100%,100%,0px,0px)
            background colfirm
            font-size 14px
            text-transform uppercase
            color #bdd5f6
            placeholder-color(#bdd5f6)
            
        .search-in
            position absolute
            display block
            top 0px 
            right 20px
            size(31px,31px)
            i
                background url(IMG_SRC/search.svg)
                size(16px,16px)
                bgP(center,center,contain)
                margin 8px
                display block
                
    &__login-p
        float-w(240px)
        height 100px
        border-top-left-radius 50px
        border-bottom-right-radius 50px
        border solid 2px #bdd5f6
        margin-top 41px
        display table
        
        &__links-block
            padding-right 35px
            
        &_log-in
            float right
            display inline-block
            color #fff
            font-size 15px
            margin 4px 0
            
        .login
            size(16px,17px)
            bgP(center,center,contain)
            background url(IMG_SRC/login.svg)
            display inline-block
            position relative
            margin-left 13px
            top 5px
                        
        .man
            background url(IMG_SRC/man.svg)
            
            
            
            
            
            

            


            

    
    
    